[user]
	name = Joe Cridge
	email = joe.cridge@me.com
	signingkey = DD659648
[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.globalgitignore
[color]
	ui = true
[format]
	pretty = medium
[alias]
	lng = log --pretty=format:'%C(yellow)%h %Creset%s%C(bold red)%d%Creset %Cblue(%an, %ar)%Creset' --abbrev-commit --graph
	lg = log --pretty=format:'%C(yellow)%h %Creset%s' --abbrev-commit --graph
	st = status
	co = checkout
	br = branch
	ci = commit
	ad = add
	dt = difftool
	df = diff
	cp = cherry-pick
	hsup = push
	hspu = push
	husp = push
	hups = push
	hpus = push
	hpsu = push
	shup = push
	shpu = push
	suhp = push
	suph = push
	spuh = push
	sphu = push
	ushp = push
	usph = push
	uhsp = push
	uhps = push
	uphs = push
	upsh = push
	psuh = push
	pshu = push
	puhs = push
	phus = push
	phsu = push
	stat = shortlog -sne
[credential]
	helper = osxkeychain
[diff]
	tool = vimdiff
	compactionHeuristic = true
	submodule = log
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[push]
	default = simple
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[sendemail]
	smtpencryption = tls
	smtpserver = smtp.mail.me.com
	smtpuser = joe.cridge@me.com
	smtpserverport = 587
	confirm = auto
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[color "diff"]
	meta = yellow
	frag = blue
	whitespace = green ul
[color "diff-highlight"]
	oldHighlight = ul
	oldReset = noul
[interactive]
	diffFilter = diff-highlight
