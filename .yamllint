---
rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1
  comments:
    require-starting-space: yes
    min-spaces-from-content: 2
  comments-indentation: enable
  document-end:
    present: yes
  document-start:
    present: yes
  empty-lines:
    max: 2
    max-start: 0
    max-end: 0
  hyphens:
    max-spaces-after: 1
  indentation:
    spaces: 2
    indent-sequences: yes
    check-multi-line-strings: yes
  key-duplicates: enable
  line-length:
    max: 79
    allow-non-breakable-words: yes
  new-line-at-end-of-file: enable
  new-lines:
    type: unix
  trailing-spaces: enable
...
