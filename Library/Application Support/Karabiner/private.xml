  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_APP_Calendar</name>
    <url type="file">/Applications/Calendar.app</url>
  </vkopenurldef>
  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_lock_screen</name>
    <url type="shell">
      <![CDATA[    /System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend    ]]>
    </url>
  </vkopenurldef>
  <devicevendordef>
    <vendorname>XENTA</vendorname>
    <vendorid>0x062a</vendorid>
  </devicevendordef>
