  <item>
    <name>My keyboard shortcuts</name>
    <item>
      <name>Use MacVim as editor</name>
      <identifier>private.changeEditor</identifier>
      <autogen>__KeyToKey__ KeyCode::EQUAL, KeyCode::VK_OPEN_URL_APP_MacVim</autogen>
    </item>
    <item>
      <name>Use Cmd-Pulse for screenshot</name>
      <identifier>private.cmdPulseScreenshot</identifier>
      <autogen>
        __KeyToKey__
        KeyCode::BACKQUOTE, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND,
        KeyCode::KEY_4, ModifierFlag::COMMAND_L, ModifierFlag::SHIFT_L
      </autogen>
    </item>
    <item>
      <name>Use FwdDel to delete files in Finder</name>
      <identifier>private.finderDelete</identifier>
      <only>FINDER</only>
      <autogen>
        __KeyToKey__
        KeyCode::FORWARD_DELETE,
        KeyCode::DELETE, ModifierFlag::COMMAND_L
      </autogen>
    </item>
    <item>
      <name>Easy quit Activity Monitor</name>
      <identifier>private.quitAct</identifier>
      <only>Activity_Monitor</only>
      <autogen>
        __KeyToKey__
        KeyCode::BACKQUOTE,
        KeyCode::Q, ModifierFlag::COMMAND_L
      </autogen>
    </item>
    <item>
      <name>Easy quit System Preferences</name>
      <identifier>private.quitPrefs</identifier>
      <only>SYSTEM_PREFERENCES</only>
      <autogen>
        __KeyToKey__
        KeyCode::HELP,
        KeyCode::Q, ModifierFlag::COMMAND_L
      </autogen>
    </item>
    <item>
      <name>Disable easy save in Terminal</name>
      <identifier>private.termSave</identifier>
      <only>TERMINAL</only>
      <autogen>
        __KeyToKey__
        KeyCode::BACKSLASH,
        KeyCode::DELETE, ModifierFlag::CONTROL_L
      </autogen>
    </item>
    <item>
      <name>Use custom function keys</name>
      <identifier>private.myFunctionKeys</identifier>
      <autogen>__KeyToKey__ KeyCode::HELP, KeyCode::VK_OPEN_URL_APP_SysPrefs</autogen>
      <autogen>__KeyToKey__ KeyCode::F5, KeyCode::VK_OPEN_URL_APP_Mail</autogen>
      <autogen>__KeyToKey__ KeyCode::F6, KeyCode::VK_OPEN_URL_APP_Calendar</autogen>
      <autogen>__KeyToKey__ KeyCode::F13, KeyCode::VK_OPEN_URL_SHELL_eject_disc</autogen>
      <autogen>__KeyToKey__ KeyCode::F14, KeyCode::VK_OPEN_URL_SHELL_lock_screen</autogen>
      <autogen>__KeyToKey__ KeyCode::F15, KeyCode::VK_OPEN_URL_SHELL_sleep</autogen>
    </item>
  </item>
  <item>
    <name>Configure Mouse</name>
    <item>
      <name>Use Windows button to Show Desktop</name>
      <identifier>private.mouseWin2showDesktop</identifier>
      <device_only>DeviceVendor::MICROSOFT, DeviceProduct::SCULPT_ERGONOMIC_MOUSE</device_only>
      <autogen>
        __KeyToKey__
        KeyCode::COMMAND_R,
        KeyCode::MISSION_CONTROL, ModifierFlag::COMMAND_L
      </autogen>
    </item>
    <item>
      <name>Use Forward/Back for navigation in Chrome</name>
      <identifier>private.mouseNavInChrome</identifier>
      <only>GOOGLE_CHROME</only>
      <device_only>DeviceVendor::RAZER, DeviceProduct::MAMBA_TOURNAMENT_EDITION</device_only>
      <autogen>
        __KeyToKey__
        PointingButton::BUTTON4,
        KeyCode::BRACKET_LEFT, ModifierFlag::COMMAND_L
      </autogen>
      <autogen>
        __KeyToKey__
        PointingButton::BUTTON5,
        KeyCode::BRACKET_RIGHT, ModifierFlag::COMMAND_L
      </autogen>
    </item>
    <item>
      <name>Use Forward button to Show Desktop</name>
      <identifier>private.mouseFwd2showDesktop</identifier>
      <device_only>DeviceVendor::RAZER, DeviceProduct::MAMBA_TOURNAMENT_EDITION</device_only>
      <autogen>
        __KeyToKey__
        PointingButton::BUTTON5,
        KeyCode::MISSION_CONTROL, ModifierFlag::COMMAND_L
      </autogen>
    </item>
    <item>
      <name>Use Back button for Mission Control</name>
      <identifier>private.mouseBack2missionControl</identifier>
      <device_only>
        DeviceVendor::MICROSOFT, DeviceProduct::SCULPT_ERGONOMIC_MOUSE,
        DeviceVendor::RAZER, DeviceProduct::MAMBA_TOURNAMENT_EDITION
      </device_only>
      <autogen>
        __KeyToKey__
        PointingButton::BUTTON4,
        KeyCode::MISSION_CONTROL
      </autogen>
    </item>
    <item>
      <name>Rock Scroll Wheel to Change Spaces</name>
      <identifier>private.scroll2changeSpace</identifier>
      <device_only> DeviceVendor::MICROSOFT, DeviceProduct::SCULPT_ERGONOMIC_MOUSE </device_only>
      <autogen>
        __ScrollWheelToKey__
        ScrollWheel::RIGHT,
        KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L
      </autogen>
      <autogen>
        __ScrollWheelToKey__
        ScrollWheel::LEFT,
        KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L
      </autogen>
    </item>
  </item>
  <item>
    <name>Chiclet keyboard hack</name>
    <identifier>private.chicletHack</identifier>
    <device_only>DeviceVendor::XENTA, DeviceProduct::CRAPPY_CHICLET_KEYBOARD</device_only>
    <autogen>__KeyToKey__ KeyCode::DANISH_DOLLAR, KeyCode::SHIFT_L</autogen>
    <autogen>__KeyToKey__ KeyCode::CONTROL_R, KeyCode::OPTION_R</autogen>
    <autogen>__KeyToKey__ KeyCode::FORWARD_DELETE, KeyCode::CONTROL_R</autogen>
  </item>
  <item>
    <name>Jeo Keyboard Layout</name>
    <include path="jeo/jeo.xml" />
  </item>
</root>
