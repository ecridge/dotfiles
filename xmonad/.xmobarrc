Config { overrideRedirect = False
       , font     = "Source Code Pro for Powerline Medium 10"
       , additionalFonts = [ "Source Code Pro for Powerline Semibold 10"
                           ]
       , bgColor  = "#343f44"
       , fgColor  = "#859289"
       -- , position = BottomW L 90
       , position = Bottom
       , commands = [ Run Weather "EGWU"
                        [ "--template", "<weather> <fn=1><fc=#d3c6aa><tempC>Â°C</fc></fn>"
                        ] 9000
                    , Run Cpu [ "--template", "Cpu <total>%"
                              , "--ppad", "2"
                              ] 10
                    , Run Alsa "default" "Master"
                        [ "--template", "<fn=1><fc=#d3c6aa><volumestatus></fc></fn>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        ]
                    , Run Memory [ "--template", "Mem <usedratio>%"
                                 , "--ppad", "2"
                                 ] 10
                    , Run Date "%a %Y-%m-%d <fn=1><fc=#d3c6aa>%H:%M</fc></fn>" "date" 10
                    , Run XMonadLog
                    ]
       , template = "%XMonadLog% }{ %alsa:default:Master% | %cpu% | %memory% | %EGWU% | %date% "
       , pickBroadest = True
       }

