Config { overrideRedirect = False
       , font     = "SauceCodePro Nerd Font Medium 10"
       , additionalFonts = [ "SauceCodePro NerdFont SemiBold 10"
                           ]
       , bgColor  = "#fdf6e3"
       , fgColor  = "#829181"
       , alpha = 216
       -- , position = BottomW L 90
       , position = BottomH 23
       , commands = [ Run Weather "EGWU"
                        [ "--template", "<tempC>°C"
                        ] 9000
                    , Run Cpu [ "--template", "Cpu <total>%"
                              , "--ppad", "2"
                              ] 30
                    , Run ThermalZone 2 [ "--template", "<fn=1><fc=#5c6a72><temp>°C</fc></fn>"
                                        , "--ppad", "2"
                                        ] 30
                    -- , Run Alsa "default" "Master"
                    --     [ "--template", "Vol <volumestatus>"
                    --     , "--suffix"  , "True"
                    --     , "--"
                    --     , "--on", ""
                    --     ]
                    , Run Memory [ "--template", "Mem <usedratio>%"
                                 , "--ppad", "2"
                                 ] 30
                    , Run Date "%a %Y-%m-%d <fn=1><fc=#5c6a72>%H:%M</fc></fn>" "date" 10
                    , Run XMonadLog
                    ]
       , template = "%XMonadLog% }{ %memory% | %cpu% | %thermal2% / %EGWU% | %date% "
       , pickBroadest = True
       }

-- vim: ft=haskell
